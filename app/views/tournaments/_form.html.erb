<%= form_with model: @tournament, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Nom du tournoi", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Ex: Coupe d'été 2025" %>
  </div>

  <div class="mb-3">
    <%= f.label :location, "Lieu", class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :start_date, "Date de début", class: "form-label" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :end_date, "Date de fin", class: "form-label" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <%= f.submit "Créer le tournoi", class: "btn btn-primary" %>
<% end %>
